---
import type { CollectionEntry } from 'astro:content';
import CategoryList from './CategoryList.astro';
import { Image } from 'astro:assets';

type Props = {
  post: CollectionEntry<'posts'>;
};

const { post } = Astro.props;
---

<article
  class="grid grid-cols-2 gap-x-12 gap-y-5 max-lg:grid-cols-1 max-sm:mb-12 mb-28"
>
  <a href={`/blog/${post.slug}`}>
    <Image
      src={post.data.image}
      width={1024}
      height={1024 / 1.5}
      alt={post.data.title}
      class="rounded-2xl aspect-thumbnail object-cover"
    />
  </a>
  <div>
    <a href={`/blog/${post.slug}`} class="mb-4 inline-block">
      <h2 class="mb-4 text-4xl font-bold text-zinc-900 inline-block">
        {post.data.title}
      </h2>
      <p class="text-zinc-500 text-2xl mb-9 line-clamp-3 max-xl:line-clamp-2">
        {post.body}
      </p>
      <span class="text-zinc-400 text-xl">{post.data.date}</span>
    </a>

    <div >
      <CategoryList categories={post.data.categories} />
    </div>
  </div>
</article>
