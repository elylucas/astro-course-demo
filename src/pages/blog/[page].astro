---
import type { GetStaticPathsOptions, Page } from 'astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import H1 from '../../components/H1.astro';
import Main from '../../components/Main.astro';
import PostList from '../../components/PostList.astro';
import Layout from '../../layouts/Layout.astro';
import Pagination from '../../components/Pagination.astro';
import CategoryList from '../../components/CategoryList.astro';

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const allPosts = await getCollection('posts');
  return paginate(allPosts, { pageSize: 4 });
}

type Props = {
  page: Page;
};

const { page } = Astro.props;
const posts = page.data as CollectionEntry<'posts'>[];
const allPosts = await getCollection('posts');
const allCategories = Array.from(new Set(allPosts.flatMap((post) => post.data.categories)));
---

<Layout title="Blog - Rhythm Nation">
  <Main>
    <H1>Rhythm Nation Blog</H1>
    <p class="text-zinc-900 text-2xl mb-24 max-sm:mb-14">
      Join the community and learn stuff.
    </p>
    <div class="mb-12 grid grid-cols-[auto,1fr] gap-x-14 gap-y-3">
      <h2 class="font-bold text-5xl text-teal-900">Tags</h2>
      <CategoryList categories={allCategories} />
    </div>

    <PostList posts={posts} />
    <div class="mb-12">
      <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
    </div>
  </Main>
</Layout>
